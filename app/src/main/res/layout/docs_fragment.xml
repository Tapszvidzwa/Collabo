<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/light_gray"
    android:layout_height="match_parent">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_gray"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:stretchMode="columnWidth"
        android:id="@+id/docs_listV"
        android:numColumns="2"
        android:horizontalSpacing="8dp"
        android:verticalSpacing="8dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
       >
    </ListView>

    <ImageView
        android:layout_width="100dp"
        android:id="@+id/no_documents_img"
        android:layout_height="150dp"
        android:visibility="invisible"
        android:src="@drawable/ic_open_cardboard_box"
        android:layout_centerInParent="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:id="@+id/no_docs_txtV"
        android:text="You haven't saved any documents"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/no_documents_img"/>


</RelativeLayout>
