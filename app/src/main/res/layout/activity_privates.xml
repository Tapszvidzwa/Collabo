<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/private_folder_contents_parent_layout"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent">

    <include layout="@layout/app_bar_layout" android:id="@+id/privates_activity_toolbar" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/privates_folders_listV"
        android:layout_below="@+id/privates_activity_toolbar">
    </ListView>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/private_activity_open_new_folder_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fab_size="mini"
        android:background="@android:color/holo_blue_light"
        app:srcCompat="@drawable/ic_create_new_folder_white_24dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:elevation="8dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        />


</RelativeLayout>
