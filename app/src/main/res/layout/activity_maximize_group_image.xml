<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include layout="@layout/app_bar_layout" android:id="@+id/maximize_image_toolbar" />

 <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
     android:layout_below="@+id/maximize_image_toolbar"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#07000000">


    <com.jsibbold.zoomage.ZoomageView
        android:id="@+id/full_image_display"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#07000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/profileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#07000000"
            android:padding="10dp"
            android:textColor="#fff"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/imageTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#07000000"
            android:padding="10dp"
            android:textColor="#fff"
            android:textSize="20dp" />


`
    </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#07000000"
            android:textColor="#fff"
            android:id="@+id/timeImageUploaded"
            android:layout_marginLeft="10dp"
            android:layout_alignParentRight="true"
            android:text="time"/>

        <Button
            android:id="@+id/open_chat_room_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chat_open_btn"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:text="JOIN DISCUSSION" />


    </RelativeLayout>

   </FrameLayout>


</RelativeLayout>
