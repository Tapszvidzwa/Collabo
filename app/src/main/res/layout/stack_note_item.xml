<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/cardbackground"
    android:layout_height="700dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/stack_note_card"
        android:background="@drawable/cardbackground"
        android:layout_height="650dp"
        cardview:cardBackgroundColor="@android:color/darker_gray"
        android:layout_gravity="center_horizontal"
        cardview:cardCornerRadius="9dp"
        android:layout_centerHorizontal="true" >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="1dp"
                android:paddingTop="2dp"
                android:paddingLeft="2dp"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:id="@+id/stack_note_title"/>

       <TextView
           android:layout_width="match_parent"
           android:layout_height="338dp"
           android:textSize="16sp"
           android:background="@android:color/white"
           android:layout_marginRight="1dp"
           android:layout_marginLeft="1dp"
           android:textColor="@android:color/black"
           android:layout_below="@id/stack_note_title"
           android:layout_marginTop="0dp"
           android:paddingTop="3dp"
           android:paddingLeft="2dp"
           android:paddingRight="2dp"
           android:id="@+id/stack_note_contents"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>