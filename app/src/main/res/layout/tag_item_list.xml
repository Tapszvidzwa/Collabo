<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="3dp"
        android:layout_gravity="center_horizontal"
        cardview:cardCornerRadius="5dp"
        cardview:cardElevation="4dp">

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:id="@+id/postDetails"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="19dp">

            <TextView
                android:id="@+id/userName"
                android:textStyle="bold"
                android:textColor="#B2B4B5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/tagLine"
                android:layout_marginLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.04"
                android:text="TextView"
                android:textColor="#000" />


        </LinearLayout>

        <TextView
            android:id="@+id/timeUploaded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="time"
            android:textColor="#B2B4B5"
            android:layout_below="@id/postDetails"
            android:layout_alignParentRight="true"
            />


          <com.wang.avi.AVLoadingIndicatorView
              android:id="@+id/unreadMessage"
              android:layout_width="30dp"
              android:layout_height="30dp"
              android:layout_alignParentRight="true"
              android:layout_marginTop="5dp"
              style="@style/AVLoadingIndicatorView.Small"
              android:visibility="visible"
              cardview:indicatorName="BallScaleMultipleIndicator"
              cardview:indicatorColor="@color/colorAccent"
              />
      </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
