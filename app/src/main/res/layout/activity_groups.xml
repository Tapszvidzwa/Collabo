<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:layout_height="match_parent"
    tools:context="com.example.tapiwa.collabo.RequestsFragment">

    <include layout="@layout/app_bar_layout" android:id="@+id/groups_activity_toolbar" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/groups_list"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/groups_activity_toolbar">

    </ListView>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/create_new_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fab_size="mini"
        android:background="@android:color/holo_blue_light"
        app:srcCompat="@drawable/ic_group_add_white_24dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:elevation="8dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        />


</RelativeLayout>
