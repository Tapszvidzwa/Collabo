<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    tools:context="com.example.tapiwa.collabo.ChatActivity">


    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:id="@+id/chats_toolbar"
        android:background="@color/collaboColor"
        android:layout_height="60dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="left"
            android:layout_centerVertical="true"
            android:id="@+id/other_user_imgV"
            app:srcCompat="@drawable/new_default_image"
          />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:layout_marginLeft="8dp"
                android:layout_centerVertical="true"
                android:id="@+id/other_user_name_toolbar_txtV"
                android:text="name"
                android:layout_alignTop="@id/other_user_imgV"
                android:layout_toRightOf="@+id/other_user_imgV"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:layout_marginLeft="8dp"
                android:layout_centerVertical="true"
                android:id="@+id/typing_status"
                android:text=""
                android:layout_marginTop="2dp"
                android:layout_below="@id/other_user_name_toolbar_txtV"
                android:layout_toRightOf="@+id/other_user_imgV"/>



        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:visibility="invisible"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/one_to_one_chat_online"
            app:srcCompat="@drawable/circle_green"
            android:layout_marginRight="8dp"
            />




        </RelativeLayout>


    </android.support.v7.widget.Toolbar>


        <ListView
            android:id="@+id/chatArea"
            android:layout_below="@id/chats_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="18dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:layout_above="@+id/send_message_cardview" />



    <android.support.design.widget.FloatingActionButton
        android:id="@+id/sendMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="2dp"
        app:srcCompat="@android:drawable/ic_menu_send" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:id="@+id/send_message_cardview"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:elevation="4dp"
        android:background="@drawable/btnshape"
        android:layout_toLeftOf="@id/sendMessage"
   >
    <EditText
        android:id="@+id/typeMessage"
        android:windowSoftInputMode="adjustPan"
        android:layout_width="match_parent"
        android:paddingLeft="8dp"
        android:layout_margin="8dp"
        android:layout_height="30dp"
        android:textSize="20dp"
        android:maxLines="1"
        android:layout_gravity="center_vertical"
        android:background="@null"
        android:hint="Start typing here..."
        />


    </android.support.v7.widget.CardView>


</RelativeLayout>
     </android.support.v4.widget.SwipeRefreshLayout>
