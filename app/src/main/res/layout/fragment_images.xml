<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/images_fragment_parent_layout"
    android:layout_width="match_parent"
    android:background="@color/light_gray"
    android:layout_height="match_parent">


    <GridView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_gray"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:stretchMode="columnWidth"
        android:id="@+id/private_folders_grdV"
        android:numColumns="2"
        android:horizontalSpacing="8dp"
        android:verticalSpacing="8dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
       >
    </GridView>

    <ImageView
        android:layout_width="150dp"
        android:id="@+id/no_images"
        android:layout_height="150dp"
        android:visibility="invisible"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_picture"/>

    <TextView
        android:layout_width="wrap_content"
        android:id = "@+id/no_image_text"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        android:text="You don't have any images saved yet"
        android:layout_below="@id/no_images"/>



</RelativeLayout>
